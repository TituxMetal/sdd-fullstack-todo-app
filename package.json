{
  "name": "sdd-fullstack-todo-app",
  "version": "0.1.0",
  "private": true,
  "description": "Fullstack app with NestJS api and Astro frontend",
  "keywords": [
    "monorepo",
    "turbo",
    "nestjs",
    "astro",
    "react",
    "authentication"
  ],
  "author": "Titux Metal",
  "license": "MIT",
  "packageManager": "yarn@4.9.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start",
    "docker:build:all": "scripts/docker-build.sh all",
    "docker:build:api": "scripts/docker-build.sh api",
    "docker:build:web": "scripts/docker-build.sh web",
    "docker:push": "turbo run docker:push --parallel",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch --parallel",
    "lint": "turbo run lint",
    "lint:check": "turbo run lint:check",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "audit": "yarn audit",
    "clean": "turbo run clean && rm -rf .turbo",
    "reset": "yarn clean && rm -rf node_modules && yarn install",
    "prepare": "husky",
    "commit": "cz",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=./packages/* && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^22.18.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.17.0",
    "yarn": ">=4.9.1"
  },
  "lint-staged": {
    "apps/api/**/*.{ts,js}": [
      "turbo run type-check lint format --filter=@app/api"
    ],
    "apps/web/**/*.{ts,tsx,astro}": [
      "turbo run type-check lint format --filter=@app/web"
    ],
    "packages/**/*.{ts,js}": [
      "turbo run type-check lint format --filter=@packages/*"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
