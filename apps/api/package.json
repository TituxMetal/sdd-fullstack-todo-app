{
  "name": "@app/api",
  "version": "0.0.1",
  "description": "NestJS api with clean architecture for fullstack app",
  "author": "Titux Metal",
  "private": true,
  "scripts": {
    "build": "nest build",
    "docker:build": "../../scripts/docker-build.sh api",
    "docker:push": "docker push lgdweb/sdd-fullstack-todo-app-api:latest",
    "dev": "nest start --watch",
    "start": "nest start",
    "start:prod": "node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "prisma": "prisma",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf coverage dist .turbo"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
